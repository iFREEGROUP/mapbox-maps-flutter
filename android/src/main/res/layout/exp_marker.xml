<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/marker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_6_border_1"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="12dp"
        android:maxWidth="120dp"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        android:maxLines="2"
        android:textStyle="bold"
        android:ellipsize="end"
        tools:text="ssasdna"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:contentDescription="@null"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toLeftOf="@id/marker_text"
        app:layout_constraintRight_toRightOf="@id/marker_text"
        app:layout_constraintTop_toBottomOf="@+id/marker_text" />

    <ImageView
        android:id="@+id/quick_link"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/bg_corner_white_6_border_1_primary"
        android:contentDescription="@null"
        android:padding="4dp"
        app:layout_constraintLeft_toRightOf="@+id/marker_text"
        app:layout_constraintTop_toTopOf="@id/marker_text"
        android:src="@android:drawable/sym_action_call" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="-12dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toTopOf="@+id/marker_text"
        app:layout_constraintRight_toLeftOf="@+id/marker_text"
        app:lottie_autoPlay="true"
        app:lottie_fileName="checkin_success.json"
        app:lottie_loop="false" />


</androidx.constraintlayout.widget.ConstraintLayout>